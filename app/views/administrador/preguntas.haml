.container.white
    .row
        .col.s12
            %h4 Registar preguntas
    .row
        .col.s12.m3.l4
            .input-field
                =select_tag :semestre_id, "<option value='' class='truncate' style='color: black;' disable selected>Selecciona el semestre</option>".html_safe + options_for_select(@semestre.collect{|s| [s.nomSemestre, s.id]}), onchange: "seleccionDeSemestre(value)"
            .input-field
                =select_tag :materia_id, "<option value='' class='truncate' style='color: black;' disable selected>Selecciona la materia</option>".html_safe, onchange: "mostrarExamenesDisponibles(value)"
        .col.s12.m9.l8
            %ul.collection.with-header.z-depth-1#P_mostrarExamen
                %li.collection-header
                    %span Selecciona el examen a editar
    .row
        .col.s12.m6.l6
            .input-field.center
                =button_tag(type: 'button', id: "mostrarAniadir",class: 'btn waves-effect waves-light blue darken-3', "data-remote": "true") do
                    =mi.add.css_class('right')
                    AÃ±adir preguntas
        .col.s12.m6.l6
            .input-field.center
                =button_tag(type: 'button', id: "mostrarEditar",class: 'btn waves-effect waves-light red darken-3', "data-remote": "true") do
                    =mi.remove.css_class('right')
                    Editar / Eliminar
    .row#Aniadir
        =form_tag("/administrador/guardarPreguntas/", method: "post", id: "registroPreguntas", "data-remote": true) do
            .container
                .row
                    .col.s12
                        %h4 Completa el siguiente formulario para registar preguntas al examen seleccionado:
                    .input-field.col.s12
                        =text_field_tag :idExamen
                        =label_tag :idExamen, "Id del examen"
                    .input-field.col.s12
                        =text_field_tag :pregunta
                        =label_tag :pregunta, "Intruduce la pregunta"
                    .input-field.col.s12
                        =text_field_tag :respuestaC
                        =label_tag :respuestaC, "Intruduce la respuesta CORRECTA"
                    .input-field.col.s12
                        =text_field_tag :respuesta1
                        =label_tag :respuesta1, "Intruduce una respuesta incorrecta"
                    .input-field.col.s12
                        =text_field_tag :respuesta2
                        =label_tag :respuesta2, "Intruduce una respuesta incorrecta"
                    .input-field.col.s12
                        =text_field_tag :respuesta3
                        =label_tag :respuesta3, "Intruduce una respuesta incorrecta"
                    .input-field.col.s4.offset-s4
                        =button_tag(type: 'button', id: "guardar_Pregunta",class: 'btn waves-effect waves-light blue darken-3', "data-remote": "true", onclick: "guardarPreguntas()") do
                            =mi.send.css_class('right')
                            Guardar
