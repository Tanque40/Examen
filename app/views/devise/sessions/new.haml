.container.center
    =image_tag("logo.png", :class => "responsive-img", :width => "250px")
.container
    .row
        .col.s12
            .card.z-depth-5
                .card-content
                    %span.flow-text
                        %center Inicio de Sesión
                    =form_for resource, as: resource_name, url: session_path(resource_name) do |f|
                        .input-field
                            =material_icon.account_circle.css_class('prefix')
                            =f.email_field :email, autofocus: true
                            =f.label :email, "Correo"
                        .input-field
                            =material_icon.enhanced_encryption.css_class('prefix')
                            =f.password_field :password
                            =f.label :password, "Contraseña"
                        -if devise_mapping.rememberable?
                            .input-field
                                =f.check_box :remember_me, class: "checkAzul"
                                =f.label :remember_me, "Recuérdame"
                        .input-field
                            %center
                                =button_tag(type: 'submit', class: 'btn waves-effect waves-light blue darken-3') do
                                    =mi.send.css_class('right')
                                    Iniciar Sesión
                    %center
                        =render "devise/shared/links"
